\newlength{\LOGOheight}
\setlength{\LOGOheight}{14.1mm}
\newlength{\headoffset}
\setlength{\headoffset}{\LOGOheight}
  \addtolength{\headoffset}{-\headheight}
  \addtolength{\headoffset}{-2.5mm}

\def\ps@rcsheadplain{\let\@mkboth\@gobbletwo
        \headheight=\LOGOheight
        \addtolength{\topmargin}{-\headoffset}
        \headsep=20mm
	\footskip=10mm
        \def\@oddhead{\usebox{\LOGOHEADER}}
        \def\@evenhead{\usebox{\LOGOHEADER}}
        \def\@oddfoot{\hfill \thepage \hfill}
        \let\@evenfoot\@oddfoot%
}

